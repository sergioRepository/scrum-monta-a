<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Nueva Reserva</h3>
    </div>
    <div class="card-body text-right">
      <form action="/reservas/new-reserva" method="POST">
        <div class="mb-3">
          <label for="fecha">Fecha:</label>
          <input
            type="date"
            name="fecha"
            class="form-control"
            placeholder="Fecha"
            autofocus
          />
        </div>
     <div class="mb-3">
  <label for="alojamiento">Alojamiento:</label>
  <select name="alojamiento" class="form-control">
    <option value="cabaña1">Cabaña 1</option>
    <option value="cabaña2">Cabaña 2</option>
    <option value="cabaña3">Cabaña 3</option>
  </select>
</div>
        <div class="mb-3">
          <label for="especificaciones">Especificaciones:</label>
          <textarea
            name="especificaciones"
            class="form-control"
            placeholder="Especificaciones"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="telefono">telefono:</label>
          <textarea
            name="telefono"
            class="form-control"
            placeholder="telefono"
          ></textarea>
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Guardar
        </button>
      </form>
    </div>
  </div>
</div>

