{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/each}}

<div class="col-md-8 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>Edit Reservation</h3>
    </div>
    <div class="card-body">
      <form action="/reservas/edit-reserva/{{reserva._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        
        <div class="mb-3">
  <label for="fecha">Fecha:</label>
  <input
    type="date"
    name="fecha"
    class="form-control"
    value="{{reserva.fecha.fechaFormatted}}"
    required
  />
</div>

        <div class="mb-3">
  <label for="alojamiento">Alojamiento:</label>
  <select name="alojamiento" class="form-control" required>
    <!-- Ejemplo estático -->
    <option value="cabaña1" {{#if (equal reserva.alojamiento "cabaña1")}}selected{{/if}}>Cabaña 1</option>
    <option value="cabaña2" {{#if (equal reserva.alojamiento "cabaña2")}}selected{{/if}}>Cabaña 2</option>
    <option value="cabaña3" {{#if (equal reserva.alojamiento "cabaña3")}}selected{{/if}}>Cabaña 3</option>
  </select>
</div>

        <div class="mb-3">
          <label for="especificaciones">Especificaciones:</label>
          <textarea
            name="especificaciones"
            class="form-control"
            required
          >{{reserva.especificaciones}}</textarea>
        </div>

        <button class="btn btn-primary w-100" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>