  <div class="card mx-auto">
    <div class="card-body">
      <p class="lead">There are no Alojamientos yet.</p>
      <a href="/alojamientos/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
